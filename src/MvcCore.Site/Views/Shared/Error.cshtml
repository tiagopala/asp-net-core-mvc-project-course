@model ErrorViewModel
@{
    ViewData["Title"] = Model == null ? "Ocorreu um Erro!" : Model.Titulo;    
}

@{ 
    if(Model == null)
    {
        <div>
            <h5>Oooops! Ocorreu um erro, mas não se preocupe nosso time será avisado.</h5>
        </div>
    }
    else
    {
        <h3>@Html.Raw(Model.Titulo)</h3>
        <h5 class="text-danger">@Html.Raw(Model.Mensagem)</h5>
    }
}